{
	"compilerOptions": {
		"lib": [
			"es2017"
		],
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"declaration": true,
		"strict": true,
		"outDir": "dist",
		"target": "es2017",
		"sourceMap": true
	},
	"include": [
		"**/*.d.ts",
		"src/**/*",
    "test/**/*",
    "dist/**/*",
	],
	"exclude": [
		"node_modules/**/*",
		"**/*.spec.ts"
	]
}